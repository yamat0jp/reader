{
  "name": "epub",
  "productName": "epub",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-macarm64": "electron-packager . --platform=darwin --arch=arm64 --asar --overwrite=true --electron-version=38.0.0 --icon=ElectronMac.icns",
    "build-mac64": "electron-packager . --platform=darwin --arch=x64 --asar --overwrite=true --electron-version=38.0.0 --icon=ElectronMac.icns",
    "build-win32": "electron-packager . --platform=win32 --arch=ia32 --asar --overwrite=true --electron-version=38.0.0 --icon=ElectronWindows.ico",
    "build-win64": "electron-packager . --platform=win32 --arch=x64 --asar --overwrite=true --electron-version=38.0.0 --icon=ElectronWindows.ico",
    "build-linux32": "electron-packager . --platform=linux --arch=ia32 --asar --overwrite=true --electron-version=38.0.0 --icon=ElectronLinux.png",
    "build-linux64": "electron-packager . --platform=linux --arch=x64 --asar --overwrite=true --electron-version=38.0.0 --icon=ElectronLinux.png",
    "run-win32": "cd \"epub-win32-ia32\" && \"epub.exe\"",
    "run-win64": "cd \"epub-win32-x64\" && \"epub.exe\""
  }
}